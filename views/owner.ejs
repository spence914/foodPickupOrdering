<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/_header.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <!-- FOOD ITEMS LIST -->
      <% for (let item of foodItems) { %>
        <div class="foodItem">
          <div id="foodDisplay">
            <img src="<%= item.thumbnail_photo_url %>"/>
            <div id ="foodInformation">
              <p id="foodNameAndPrice"><%= item.name %> â€¢ $<%= item.price %></p>
              <p class="foodItemDescription"><%= item.description %></p>
            </div>
          </div>
          <form action="/order/<%= orderID %>" method="POST"> <!-- orderID might not exist -->
            <input type="number" id="quantity" name="quantity" step="1" min="1"/>
            <input type="hidden" name="foodItemID" value="<%= item.id %>"/>
            <input type="hidden" name="orderID" value="<%= orderID %>"/>
            <button type="submit">Add to Cart</button>
          </form>
        </div>
      <% } %>
      <!-- END OF FOOD ITEMS LIST -->
    </main>
</body>

</html>
